Description: CloudFormation template to create S3 buckets for static file storage.

Parameters:
  EnvironmentName:
    Type: String
    Default: dev
    Description: Environment name (dev, staging, prod)

Resources:
  S3Bucket:
    Type: AWS::S3::Bucket
    Properties:
      BucketName: opensupport-Bucketest
      AccessControl: PublicRead

Outputs:
  BucketName:
    Description: The name of the S3 bucket
    Value: !Ref S3Bucket
